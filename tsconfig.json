{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "@nuxt/kit", "@nuxt/nitro"]
  },
  "include": ["src/**/*", "example"],
  "exclude": ["node_modules", "dist"]
}
